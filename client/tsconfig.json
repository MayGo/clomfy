{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowJs": true,
    "sourceRoot": "./",
    "baseUrl": "./",
    "skipLibCheck": true,
    "sourceMap": true,
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "exclude": [
    "app",
    "node_modules",
    "node_modules/aurelia-validation/node_modules",
    "dist",
    "packaged",
    "static"
  ]
}